<p id="notice"><%= notice %></p>
<div class="page-title-holder">
  <div class="page-title"><h1><%= @user.fullname %></h1></div>
  <div style="float:left;">
  	<div class="iconHolder">
  		<%= link_to(edit_user_path(@user), :title => 'Update User') do %><i class="icon-update"></i><% end %>
  		<%= link_to(users_path, :title => 'All Users') do %><i class="icon-list"></i><% end %>
  	</div>
  </div>
</div>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<p>
  <b>Roles:</b>
  <% for role in @user.roles %>
    <li><%= role.name %></li>
  <% end %>
</p>


<p>
  <b>Email:</b>
  <%= mail_to @user.email %>
</p>

<p>
  <b>Team:</b>
  <%= link_to @user.team.team_name, @user.team %>
</p>

<p>
  <b>Events:</b>
  <% for event in Event.find(:all) %>
    <li style="margin-left:1em;"><%= event.event_name %> <small>(<%= event.date_range %>)</small></li>
  <% end %>
</p>




<%#= link_to 'Edit', edit_user_path(@user) %>
<%#= link_to 'Back', users_path %>
