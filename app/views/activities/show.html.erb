<p id="notice"><%= notice %></p>
<div class="page-title-holder">
  <div class="page-title"><h1>Activity #<%= @activity.id %></h1></div>
  <div style="float:left;">
  	<div class="iconHolder">
  		<% if current_user %><%= link_to(edit_activity_path(@activity), :title => 'Update Activities') do %><i class="icon-update"></i><% end %><%end %>
  		<%= link_to(activities_path, :title => 'All Activities') do %><i class="icon-list"></i><% end %>
  	</div>
  </div>
</div>

<p>
  <b>Distance:</b>
  <%= @activity.distance %> miles
</p>

<p>
  <b>Activity date:</b>
  <%= @activity.activity_date %>
</p>

<p>
  <b>Manual:</b>
  <%= @activity.manual %>
</p>

<p>
  <b>User:</b>
  <%= link_to(@activity.user.fullname, @activity.user, :title => "View " + @activity.user.fullname + "'s profile" )%>
</p>

<p>
  <b>Event:</b>
  <%= link_to(@activity.event.event_name, @activity.event, :title => "View the " + @activity.event.event_name + " profile" ) %>
</p>


<%#= link_to 'Edit', edit_activity_path(@activity) %>
<%#= link_to 'Back', activities_path %>
